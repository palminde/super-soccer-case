{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "declaration": true
  },
  "ts-node": {
    "esm": true,
    "compiler": "typescript",
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
